---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'JWT API App', 
  description = 'API REST Profesional con Autenticaci√≥n JWT'
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Fuentes de sistema Apple -->
    <style>
      @supports (font: -apple-system-body) {
        html {
          font: -apple-system-body;
        }
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  body {
    min-height: 100vh;
    margin: 0;
    padding: 0;
  }
</style>
